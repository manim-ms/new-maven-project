 pipeline {
   agent any
   tools {
      jdk 'Java17'
      maven 'Maven3'
      }
      stages {
        stage('Versions') {
          steps {
            sh 'java --version'
            sh 'mvn --version'
     }
}
    stage('Checkout') {
         steps {
            git branch: 'main',
            url: 'https://github.com/balakrishnasetlem/projectMaven.git',
            credentialsId: 'github-password'
    }
}
    stage('Install and deploy') {
         steps {
           sh 'mvn install tomcat7:deploy'
   }
}
}
}
